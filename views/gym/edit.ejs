<%- contentFor('body') %>

<span style="color:white">Gym home page.</span>

<form action="/gym" method="post">
  <h3>Pokemon 1:</h3>
  <select name="pokemon1">
    <% for (var i = 0; i < pokemon.length; i++) { %>
      <option value="<%= pokemon[i].id %>"><%= pokemon[i].name %></option>
    <% } %>
  </select>

  <h3>Pokemon 2:</h3>
  <select name="pokemon2">
    <% for (var i = 0; i < pokemon.length; i++) { %>
      <option value="<%= pokemon[i].id %>"><%= pokemon[i].name %></option>
    <% } %>
  </select>
  <input type="submit" value="Add Pokemon to Gym">
</form>
